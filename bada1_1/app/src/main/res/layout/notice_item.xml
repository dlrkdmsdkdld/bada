<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_layout_gray"
    app:cardCornerRadius="12dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="20dp"
    android:elevation="20dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/tv_proj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "프로젝트"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="5dp"/>
                <ImageButton
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:id="@+id/notice_recylcer_btn"
                    android:background="@drawable/ic_baseline_heart_broken_24"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "세부사항"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_serv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서버"
                    android:layout_marginRight="15dp"/>
                <TextView
                    android:id="@+id/tv_andr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안드로이드"
                    android:layout_marginRight="15dp"/>
                <TextView
                    android:id="@+id/tv_ios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ios"
                    android:layout_marginRight="15dp"/>
                <TextView
                    android:id="@+id/tv_web"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="웹"
                    android:layout_marginRight="15dp"/>
                <TextView
                    android:id="@+id/tv_gui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GUI"
                    android:layout_marginRight="15dp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>




</androidx.cardview.widget.CardView>