<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/map">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/gyeonggi"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/map_btn"
        android:text="경기도"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="90dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/seoul"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:background="@drawable/map_btn"
        android:text="서울"
        app:layout_constraintTop_toBottomOf="@+id/gyeonggi"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="120dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/map_btn"
        android:id="@+id/kangwon"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="강원도"
        app:layout_constraintLeft_toRightOf="@+id/gyeonggi"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="45dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/map_btn"
        android:id="@+id/chungnam"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="충청남도"
        app:layout_constraintTop_toBottomOf="@+id/seoul"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="75dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/map_btn"
        android:id="@+id/chungbuk"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="충청북도"
        app:layout_constraintLeft_toRightOf="@+id/chungnam"
        app:layout_constraintTop_toBottomOf="@+id/seoul"
        android:layout_marginTop="15dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/map_btn"
        android:id="@+id/jeonbuk"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="전라북도"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="110dp"
        app:layout_constraintTop_toBottomOf="@+id/chungnam"
        android:layout_marginTop="60dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/map_btn"
        android:id="@+id/jeonnam"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="전라남도"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="110dp"
        app:layout_constraintTop_toBottomOf="@+id/jeonbuk"
        android:layout_marginTop="60dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/map_btn"
        android:id="@+id/gyeongbuk"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="경상북도"
        app:layout_constraintLeft_toRightOf="@+id/chungnam"
        android:layout_marginLeft="90dp"
        app:layout_constraintTop_toBottomOf="@+id/chungbuk"
        android:layout_marginTop="30dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/map_btn"
        android:id="@+id/gyeongnam"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="경상남도"
        app:layout_constraintLeft_toRightOf="@+id/chungnam"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@+id/gyeongbuk"
        android:layout_marginTop="80dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/map_btn"
        android:id="@+id/jeju"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:backgroundTint="@color/gray"
        android:text="제주도"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="70dp"
        app:layout_constraintTop_toBottomOf="@+id/gyeongnam"
        android:layout_marginTop="185dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원하시는 지역을 선택해주세요"
        android:textStyle="bold"
        android:textColor="@color/powderblue"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>