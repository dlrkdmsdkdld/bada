<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".activity.NoticeDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/icon_arrow_left"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="22dp"
            android:id="@+id/detail_back_btn"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="게시판"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_back_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/ic_profile"
            android:layout_marginTop="30dp"
            android:id="@+id/detail_user_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/detail_back_btn"
            app:layout_constraintStart_toEndOf="@+id/detail_user_image"
            android:layout_marginTop="35dp"
            android:id="@+id/detail_email"
            android:text="dlrkdmsdkdl@naber.copm"
            android:layout_marginLeft="20dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/detail_user_image"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:text="제목"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/detail_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/detail_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="내용"
            android:ems="20"
            android:id="@+id/detail_content"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/detail_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/detail_aos"

            />
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/detail_content"
            android:layout_marginTop="20dp"
            android:id="@+id/detail_server"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/detail_aos"


            />
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/detail_content"
            android:layout_marginTop="20dp"
            android:id="@+id/detail_ios"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/detail_server"


            />
        <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/detail_content"
            android:layout_marginTop="20dp"
            android:id="@+id/detail_design"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/detail_ios"


            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/detail_aos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_baseline_favorite_24"
            android:id="@+id/detail_like"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_aos"
            app:layout_constraintStart_toEndOf="@+id/detail_like"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:id="@+id/detail_like_text"
            android:textColor="#FF0000"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/detail_like_text"
            app:layout_constraintTop_toBottomOf="@+id/detail_aos"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_livechat"
            android:id="@+id/detail_live"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_aos"
            app:layout_constraintStart_toEndOf="@+id/detail_live"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:id="@+id/detail_live_text"
            android:textColor="@color/powderblue"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_like"
            android:layout_marginTop="20dp"
            android:background="#EDEDED"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/detail_line"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/detail_chat_layout"
            app:layout_constraintTop_toBottomOf="@+id/detail_line"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/detail_new_chat"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/round_layout_stroke_gray"
                android:hint="댓글 추가하기"
                android:padding="10dp"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/detail_new_btn"
                app:layout_constraintTop_toTopOf="parent" />
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/plus_circle_powderblue"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/detail_new_btn"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/detail_chat_layout"
            tools:listitem="@layout/item_chat"
            android:id="@+id/detail_recylcerview"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>